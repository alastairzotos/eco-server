{
	"exclude": [
		"build"
	],
	"include": [
		"src"
	],
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "CommonJS",
		"lib": ["ES2015", "DOM"],
		"target": "es5",
		"noImplicitAny": false,
		"outDir": "build",
		"rootDir": "src",
		"sourceMap": false,
		"declaration": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"paths": {
			"~/*": ["*"]
		}
	}
}